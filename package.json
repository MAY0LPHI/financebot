{
  "name": "financebot-whatsapp",
  "version": "1.0.0",
  "description": "Sistema de controle financeiro via bot WhatsApp",
  "private": true,
  "workspaces": [
    "backend",
    "shared"
  ],
  "scripts": {
    "install:all": "npm install && npm install --workspace=backend && npm install --workspace=shared",
    "dev": "npm run start:dev --workspace=backend",
    "build:shared": "npm run build --workspace=shared",
    "build": "npm run build:shared && npm run build --workspace=backend",
    "lint": "npm run lint --workspace=backend",
    "format": "npm run format --workspace=backend",
    "test": "npm run test --workspace=backend",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "prisma:migrate": "npm run prisma:migrate --workspace=backend",
    "prisma:seed": "npm run prisma:seed --workspace=backend"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
